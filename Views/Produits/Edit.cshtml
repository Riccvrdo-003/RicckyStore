@model ProduitDto
@{
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5"> Modifier un Produit</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@ViewData["ProduitsId"]" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nom</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="nom" />
                    <span asp-validation-for="nom" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Marque</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="marque" />
                    <span asp-validation-for="marque" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Catégorie</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="categorie">
                        <option value="Ordinateurs">Ordinateurs</option>
                        <option value="Accessoires">Accessoires</option>
                        <option value="Imprimantes">Imprimantes</option>
                        <option value="Caméras">Caméras</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Prix</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="prix" />
                    <span asp-validation-for="prix" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="description" />
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-8">
                    <img src="/produitsImages/@ViewData["imageFichierNom"]" width="150" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="imageFichierNom" />
                    <span asp-validation-for="imageFichierNom" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Date d'ajout</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" value="@ViewData["dateAjout"]" />
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-danger" asp-controller="Produits" asp-action="Index" role="button">
                        Retour
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

